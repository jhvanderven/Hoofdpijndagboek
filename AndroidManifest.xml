            </intent-filter>        </activity>
        <activity
            android:name=".HPDDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HPDHeadLeft"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HPDHeadRight"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HPDMedicins"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HPDTime"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewPill"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditPillsActivity"
            android:screenOrientation="portrait" />
